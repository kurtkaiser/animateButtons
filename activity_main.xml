<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:background="#A5ECA8">
    <Button
            android:text="Fade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fadeBtn"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:background="#2196F3"
            android:textStyle="bold"
            android:layout_margin="15dp"/>
    <Button
            android:text="Zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zoomBtn" android:textColor="#FFFFFF"
            android:textSize="22sp" android:background="#2196F3" android:textStyle="bold" android:layout_margin="15dp"/>
    <Button
            android:text="Spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinBtn"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:background="#2196F3"
            android:textStyle="bold" android:layout_margin="15dp"/>
    <Button
            android:text="Drop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dropBtn"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:background="#2196F3"
            android:textStyle="bold"
            android:layout_margin="15dp"/>
    <Button
            android:text="Flash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flashBtn" android:textColor="#FFFFFF"
            android:textSize="22sp" android:background="#2196F3" android:textStyle="bold" android:layout_margin="15dp"/>
    <Button
            android:text="Slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slideBtn" android:textColor="#FFFFFF"
            android:textSize="22sp" android:background="#2196F3" android:textStyle="bold" android:layout_margin="15dp"/>
</LinearLayout>
